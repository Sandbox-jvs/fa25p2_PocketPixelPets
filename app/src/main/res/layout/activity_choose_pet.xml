<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9FFF6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/choosePetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/nokiafc22"
        android:text="@string/choose_your_pet"
        android:textColor="#6CA893"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/otterSpriteView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.talentengine.pocketpixelpets.SpriteView
        android:id="@+id/otterSpriteView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.35"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/turtleSpriteView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.talentengine.pocketpixelpets.SpriteView
        android:id="@+id/turtleSpriteView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:alpha="0.35"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/foxSpriteView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/otterSpriteView" />

    <com.talentengine.pocketpixelpets.SpriteView
        android:id="@+id/foxSpriteView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:alpha="0.35"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turtleSpriteView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#6CA893"
        android:fontFamily="@font/nokiafc22"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="#E9FFF6"
        android:textSize="24sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foxSpriteView" />

</androidx.constraintlayout.widget.ConstraintLayout>
